<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:layout_gravity="bottom"
    android:baselineAligned="false">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/margin_tab"
        android:layout_marginRight="@dimen/margin_tab"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/red_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="red"
            android:scaleType="centerCrop"
            android:src="@drawable/red" />

        <TextView
            android:id="@+id/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="25" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/margin_tab"
        android:layout_marginRight="@dimen/margin_tab"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="green"
            android:scaleType="centerCrop"
            android:src="@drawable/green" />

        <TextView
            android:id="@+id/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="25" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/margin_tab"
        android:layout_marginRight="@dimen/margin_tab"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="blue"
            android:scaleType="centerCrop"
            android:src="@drawable/blue" />

        <TextView
            android:id="@+id/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="25" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/margin_tab"
        android:layout_marginRight="@dimen/margin_tab"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="orange"
            android:scaleType="centerCrop"
            android:src="@drawable/orange" />

        <TextView
            android:id="@+id/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="25" />
    </FrameLayout>

    <ImageView
        android:id="@+id/extra_menu_button"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/margin_tab"
        android:layout_marginRight="@dimen/margin_tab"
        android:scaleType="centerInside"
        android:src="@android:drawable/stat_sys_upload_done"
        android:visibility="gone" />
</LinearLayout>
